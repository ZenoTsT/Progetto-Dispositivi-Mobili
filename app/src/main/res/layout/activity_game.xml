<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <ImageButton
        android:contentDescription="Leaderboard"
        android:id="@+id/leaderboard_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="fitCenter"
        android:layout_gravity="end|top"
        android:backgroundTint="@color/light_gray"
        app:srcCompat="@drawable/leaderboard_icon" />

    <TextView
        android:id="@+id/player_turn_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It's your turn: "
        android:gravity="center"
        android:textSize="20sp"
        android:background=""
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="60dp"/>

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domanda"
        android:gravity="center"
        android:textSize="24sp"
        android:background="@color/pure_white"
        android:padding="20dp"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="40dp"/>

    <Button
        android:id="@+id/answer_button_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="23dp"
        android:backgroundTint="@color/lilla"
        android:text="Risposta 1"
        android:textSize="17sp"
        android:textColor="@color/pure_black" />

    <Button
        android:id="@+id/answer_button_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lilla"
        android:text="Risposta 2"
        android:textColor="@color/pure_black"
        android:layout_marginBottom="23dp"
        android:textSize="17sp"
        android:layout_marginHorizontal="50dp"/>

    <Button
        android:id="@+id/answer_button_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lilla"
        android:text="Risposta 3"
        android:textColor="@color/pure_black"
        android:layout_marginBottom="23dp"
        android:textSize="17sp"
        android:layout_marginHorizontal="50dp"/>

    <Button
        android:id="@+id/answer_button_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lilla"
        android:text="Risposta 4"
        android:textColor="@color/pure_black"
        android:layout_marginBottom="23dp"
        android:textSize="17sp"
        android:layout_marginHorizontal="50dp"/>

</LinearLayout>

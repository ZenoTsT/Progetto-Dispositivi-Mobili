<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical"
    android:paddingTop="20dp"
    android:gravity="top|center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:paddingHorizontal="16dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

    <Button
        android:id="@+id/end_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/pure_white"
        android:text="End Game"
        android:layout_marginTop="15dp"
        android:textColor="@color/wrong_red"
        android:layout_weight="0" />

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

        <ImageButton
            android:id="@+id/leaderboard_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0"
            android:backgroundTint="@color/light_gray"
            android:contentDescription="Leaderboard"
            android:paddingBottom="5dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/leaderboard_icon" />

    </LinearLayout>





<TextView
        android:id="@+id/player_turn_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="It's your turn: "
        android:gravity="center"
        android:textSize="20sp"
        android:background="@color/pure_white"
        android:padding="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="55dp"
        android:textColor="@color/medium_gray"/>

    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Domanda"
        android:gravity="center"
        android:textSize="22sp"
        android:background="@color/pure_white"
        android:padding="10dp"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="40dp"
        android:textColor="@color/medium_gray"/>

    <Button
        android:id="@+id/answer_button_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="18dp"
        android:backgroundTint="@color/lilla"
        android:text="Risposta 1"
        android:textSize="16sp"
        android:textColor="@color/medium_gray" />

    <Button
        android:id="@+id/answer_button_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lilla"
        android:text="Risposta 2"
        android:textColor="@color/medium_gray"
        android:layout_marginBottom="18dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="50dp"/>

    <Button
        android:id="@+id/answer_button_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lilla"
        android:text="Risposta 3"
        android:textColor="@color/medium_gray"
        android:layout_marginBottom="18dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="50dp"/>

    <Button
        android:id="@+id/answer_button_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/lilla"
        android:text="Risposta 4"
        android:textColor="@color/medium_gray"
        android:layout_marginBottom="18dp"
        android:textSize="16sp"
        android:layout_marginHorizontal="50dp"/>

</LinearLayout>
